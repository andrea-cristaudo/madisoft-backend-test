{% extends 'base.html.twig' %}
{% set formView        = form.createView() %}
{% set recipeCollector = form.data %}

{% block title %}Bulk Edit Recipes{% endblock %}

{% block body %}
    {{ form_start(formView) }}
        {{ form_errors(formView) }}

        {{ form_row(formView.recipes, {label: false}) }}

        <div class="add-recipe">
            <a href="#" class="btn btn-primary">Add recipe</a>
        </div>
        <button class="btn btn-success" name="action" value="save">Save</button>
        <button class="btn btn-primary" name="action" value="cancel">Cancel</button>
    {{ form_end(formView) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/manage-ingredients.js') }}"></script>
{% endblock %}