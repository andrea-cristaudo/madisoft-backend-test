{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
        <tr>
            <td>{{ recipe.id }}</td>
            <td>{{ recipe.name }}</td>
            <td>
                <a href="{{ path('recipe_edit', {id: recipe.id}) }}" class="btn btn-primary">Edit</a>
                <a href="{{ path('recipe_remove', {id: recipe.id}) }}" class="btn btn-danger">Remove</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recipe_new') }}" class="btn btn-primary">Add recipe</a>
    <a href="{{ path('recipe_bulk_edit') }}" class="btn btn-primary">Bulk edit</a>
{% endblock %}